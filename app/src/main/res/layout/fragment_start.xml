<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text" />

    <com.intervale.testbvg.view.FloatingLabelEditText
        android:id="@+id/title_field"
        style="@style/floatingLabelEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_small"
        app:fl_caption="Название конверта *" />

    <com.intervale.testbvg.view.FloatingLabelEditText
        android:id="@+id/description_field"
        style="@style/floatingLabelEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_small"
        app:fl_caption="Описание конверта" />

    <com.intervale.testbvg.view.FloatingLabelEditText
        android:id="@+id/owner_number"
        style="@style/floatingLabelEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_small"
        app:fl_caption="Ваш номер телефона *" />

    <com.intervale.testbvg.view.FloatingLabelEditText
        android:id="@+id/owner_name"
        style="@style/floatingLabelEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_small"
        app:fl_caption="Ваша имя и фамилия" />

    <com.intervale.testbvg.view.FloatingLabelEditText
        android:id="@+id/destination_number"
        style="@style/floatingLabelEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_small"
        app:fl_caption="Номер получателя конверта" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>